@model HomeViewModel

    <div class="container">
        <div class="row">
            <div class="col-lg-3" style="margin-top:20px">
                <h4>Things to learn</h4>
                <a asp-controller="Book" asp-action="List" asp-route-category="Education"><img src="~/images/Others/thingstolearn.jpg" style="max-width:100%"></a>
            </div>

            <div class="col-lg-9">
                @await Html.PartialAsync("Carousel")

                <h2>Best sellers</h2>

                <div class="row">
                    <div class="row" >
                        @foreach (Book book in Model.PreferredBooks)
                        {
                            <partial name="BooksSummary" model="book"/>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>